---
import "../styles/global.css";
const { title } = Astro.props;
const { cookies, url } = Astro;
const accessToken = cookies.get("sb-access-token");
const isAuthenticated = !!accessToken;
const isChatPage = url.pathname === '/chat';
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		{isAuthenticated && (
			<header class="fixed top-0 w-full p-4 flex justify-between items-center border-b border-mustard">
				{isChatPage ? (
					<a href="/" class="text-sm text-satured-creme hover:text-orange transition-all duration-150">
						Back to Home
					</a>
				) : (
					<div></div>
				)}
				<a href="/api/auth/signout" class="text-sm text-satured-creme hover:text-orange transition-all duration-150">
					Logout
				</a>
			</header>
		)}
		<slot />
	</body>
</html>